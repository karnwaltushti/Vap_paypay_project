doctype html
style.
    input {
    width: 100%;
    padding: 12px 20px;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    }
    
    input[type=submit] {
    width: 100%;
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    margin-top:20px;
    border-radius: 4px;
    cursor: pointer;
    }
    input[type=submit]:hover {
    background-color: #45a049;
    }
    div {
    border-radius: 5px;
    background-color: #f2f2f2;
    padding: 20px;
    width:25%;
    margin-top:200px;
    margin-left:710px;
    }

div
    form(action='/log' method="post" )
        h1 Login
        p Register No.
        input(
            type='text'
            name='id'
            placeholder='Register No.'
            style="font-size:14pt;align:center;"
            size="35"                    
        )
        p Password
        input(
            type='password'
            name='password'
            placeholder='Password'
            style="font-size:14pt;margin-bottom:15px;align:center;"
