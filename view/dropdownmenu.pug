doctype html
style.
    input[type=text], select {
    width: 100%;
    padding: 12px 20px;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    }
    select{
        margin:8px 0;
    }
    input[type=submit] {
    width: 100%;
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    margin-top:20px;
    border-radius: 4px;
    cursor: pointer;
    }
    input[type=submit]:hover {
    background-color: #45a049;
    }
    div {
    

    }
    a{
        color:#000;
        text-decoration:none;
    }
    a:hover{
        color :#4d4d4d;
        text-decoration:underline;
    }
    .circular--square {
        border-radius: 50%;
    }   
    

body

div(style="background-color:#4CAF50;position: relative;top: -15px;left:-5px;height:65px ")
    table(style="width:100%",align="center",border="0")
        tr
            td(style="width:160px") 
                h2(align="center",style="font-weight:bold;") VPal 
            td(style="width:80px") 
                b 
                    a(href='/home') Home
            
            td(style="width:125px")
                b 
                    a(href='/courses') All Courses
            td(style="width:1350px")
                b 
                    a(href='/action') Add Courses
            td(style="margin-right:0px")
                b
                    a(href='#') #{user_id}
            td
                image(class="circular--square" src='us.png' style='width:35px; height:35px;')

div(style="margin-top:160px;margin-left:710px;width:25%;padding: 20px;background-color: #f2f2f2;border-radius: 5px;")
    form(action='/CourseOpted' method="post" )
        h1 Choose Your Course
        h2 Register No. #{user_id}
        br
        
        label(for='courseOpt') Courses
        select(name='dropDown', id='')
            each course in Courses
                option=course
            input(type='submit', value='Submit')